<div class="row">
  <div class="col-md-12">
    <div class="js-appointments">
      <% if visiting_user %>
        <%= form_for [visiting_user, Appointment.new], remote: true do |f| %>
          <div class="form-group">
            <label for="Duration" >How long will the appointment run?</label>
              <%= f.time_select :duration, prompt: {hour: 'Choose hours', minute: 'Choose minutes'}, minute_step: 15, end_hour: 2 %>
          </div>
          <div class="form-group">
            <label for="itemDate" >Choose date of appointment</label>
              <%= f.datetime_select :time_of, minute_step: 15, ampm: true, start_year: DateTime.now.strftime('%Y').to_i, end_year: (Time.now +  31449600).strftime('%Y').to_i %>
          </div>
          <div class="form-group">
              <%= f.hidden_field :vendor_id, value: user_on_page.id %>
              <%= f.hidden_field :customer_id, value: visiting_user.id %>
          </div>
          <div class="form-group">
            <%= f.submit "Save item", class: 'btn btn-success' %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
