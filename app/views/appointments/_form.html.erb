<div class="row">
  <div class="col-md-12">
    <% if customer %>
      <%= form_for [customer, appointment] do |f| %>
        <div class="form-group">
          <label for="Duration" >How long will the appointment run?</label>
          <div class="radio">
            <%= f.radio_button :duration, 30 %> 30 minutes
          </div>
          <div class="radio">
            <%= f.radio_button :duration, 60 %> 1 hour
          </div>
          <div class="radio">
            <%= f.radio_button :duration, 90 %> 1 hour and 1/2
          </div>
          <div class="radio">
            <%= f.radio_button :duration, 120 %> two hours
          </div>
        </div>
        <div class="form-group">
          <label for="itemName" >Choose date of appointment</label>
            <%= f.datetime_select :time_of, minute_step: 15, ampm: true, start_year: DateTime.now.strftime('%Y').to_i, end_year: (Time.now +  31449600).strftime('%Y').to_i %>
        </div>
        <div class="form-group">
          <%= f.submit "Save item", class: 'btn btn-success' %>
        </div>
        <%= javascript_include_tag 'http://localhost:3000/item_create.js'%>
      <% end %>
    <% end %>
  </div>
</div>
